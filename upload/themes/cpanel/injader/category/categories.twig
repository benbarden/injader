{% extends "core/base.twig" %}

{% block cp_content %}

<h1 class="page-header">Categories</h1>

    {% if CP.Msg %}
        {% if CP.Msg == 'addsuccess' %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                Category added.
            </div>
        {% elseif CP.Msg == 'editsuccess' %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                Category updated.
            </div>
        {% elseif CP.Msg == 'deletesuccess' %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                Category deleted.
            </div>
        {% endif %}
    {% endif %}

    <button onclick="top.location.href = '/cp/category.php?action=create';">New Category</button>

    <div style="clear: both; float: none;">&nbsp;</div>

    {% if Page.CategoryList %}
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th class="col-md-1">Id</th>
                <th class="col-md-3">Name</th>
                <th class="col-md-3">Permalink</th>
                <th class="col-md-1">Items per page</th>
                <th class="col-md-2">Options</th>
            </tr>
            </thead>
            <tbody>
                {% for Item in Page.CategoryList %}
                    <tr>
                        <th>{{ Item.id }}</th>
                        <td>{{ Item.name }}</td>
                        <td>{{ Item.permalink }}</td>
                        <td>{{ Item.items_per_page }}</td>
                        <td>
                            <a class="btn btn-default" href="{{ cpLink('category', {'action': 'edit', 'id': Item.id}) }}" role="button">Edit</a>
                            <a class="btn btn-danger" href="{{ cpLink('category', {'action': 'delete', 'id': Item.id}) }}" role="button">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}

{% endblock cp_content %}