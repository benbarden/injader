{% extends "core/base.twig" %}

{% block cms_page_description %}
{{ Area.Desc }}
{% endblock cms_page_description %}

{% block cms_content %}
{% if Area.Content %}
{% for Item in Area.Content %}
    <div class="blog-post">
        <h2 class="blog-post-title">
            <a href="{{ cmsLinkArticle(Item.Id) }}">{{ Item.Title }}</a>
        </h2>
        <p class="blog-post-meta">{{ Item.Date }}{# by <a href="#">Mark</a>#}</p>
        {{ Item.Body|raw }}
    </div>
{% endfor %}
{#
<ul class="pager">
    <li><a href="#">Previous</a></li>
    <li><a href="#">Next</a></li>
</ul>
#}
{% endif %}
{% endblock cms_content %}
