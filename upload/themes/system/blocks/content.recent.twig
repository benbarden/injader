<h2>Recent content</h2>
{% set ContentRecent = cmsDataContentRecent(5) %}
{% if ContentRecent %}
    {% for Item in ContentRecent %}
        <strong>{{ cmsFormatDate(Item.create_date, 'D jS M') }}</strong>:
        <a href="{{ cmsLinkArticle(Item.id) }}">{{ Item.title }}</a>
        <br>
    {% endfor %}
{% else %}
    <p>No recent content!</p>
{% endif %}