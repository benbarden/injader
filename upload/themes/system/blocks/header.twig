<meta name="generator" content="Injader - http://www.injader.com">
{% if Page.Type == 'category' %}
    {% if Area.Desc != '' %}
        <meta name="description" content="{{ Area.Desc }}">
    {% endif %}
{% elseif Page.Type == 'article' %}
    {% if Article.Excerpt != '' %}
        <meta name="description" content="{{ Article.Excerpt }}">
    {% endif %}
{% else %}
<meta name="description" content="{{ CMS.Settings.SiteDesc }}">
<meta name="keywords" content="{{ CMS.Settings.SiteKeywords }}">
{% endif %}

{% if Page.CanonicalUrl %}
<link rel="canonical" href="{{ cmsDomainFull() }}{{ Page.CanonicalUrl }}">
{% endif %}
{% if Page.PrevUrl %}
<link rel="prev" href="{{ cmsDomainFull() }}{{ Page.PrevUrl }}">
{% endif %}
{% if Page.NextUrl %}
<link rel="next" href="{{ cmsDomainFull() }}{{ Page.NextUrl }}">
{% endif %}

<link rel="alternate" type="application/rss+xml" title="Site Feed - {{ CMS.Settings.SiteTitle }}" href="{{ CMS.Settings.SiteRSSArticlesUrl }}">
{% if Area.FeedUrl %}
<link rel="alternate" type="application/rss+xml" title="Area Feed - {{ Area.Name }} - {{ CMS.Settings.SiteTitle }}" href="{{ Area.FeedUrl }}">
{% endif %}
{% if Article.FeedUrl %}
<link rel="alternate" type="application/rss+xml" title="Comment Feed - {{ Article.Title }} - {{ CMS.Settings.SiteTitle }}" href="{{ Article.FeedUrl }}">
{% endif %}

<!-- Bootstrap -->
<link href="{{ URL.SiteRoot }}assets/css/bootstrap/bootstrap.min.css" rel="stylesheet">
<link href="{{ URL.SiteRoot }}assets/css/bootstrap/bootstrap-theme.min.css" rel="stylesheet">
